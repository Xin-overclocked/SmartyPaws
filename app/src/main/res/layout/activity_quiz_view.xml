<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <ProgressBar
        android:id="@+id/loadingProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- Toolbar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"/>

        <ImageButton
            android:id="@+id/menuButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_more"
            android:contentDescription="Menu"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/quizScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Quiz Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quiz"
                android:textSize="16sp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/quizTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MAD Lecture 2 Quiz"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/quizDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13 November 2024"
                android:textSize="14sp"
                android:textColor="@color/dark_purple"
                android:layout_marginTop="4dp"/>

            <!-- Quiz Description -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/light_purple"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/quizDescriptionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="This is a quiz description."
                    android:textColor="#000000"/>

            </androidx.cardview.widget.CardView>

            <!-- Questions Count -->
            <TextView
                android:id="@+id/questionsCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 questions"
                android:textSize="14sp"
                android:textColor="@color/dark_purple"
                android:layout_marginTop="16dp"/>

            <!-- Questions Container -->
            <LinearLayout
                android:id="@+id/questionsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- Study Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/studyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Study"
        android:textColor="@color/white"
        android:backgroundTint="@color/medium_purple"
        android:layout_margin="16dp"/>

</LinearLayout>

